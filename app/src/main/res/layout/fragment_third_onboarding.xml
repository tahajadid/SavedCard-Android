<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_alignParentBottom="true"
android:fitsSystemWindows="true"
tools:context=".ui.onboarding.ThirdOnboardingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cyan_800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />


        <ImageView
            android:id="@+id/imageViewbg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0.1"
            android:scaleType="center"
            android:src="@drawable/login_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/onboarding_pin_code"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/wrong_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:elevation="10dp"
            android:fontFamily="@font/tulisans"
            android:text="Secure your app"
            android:textColor="@color/cyan_50"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            app:layout_constraintVertical_bias="0.1" />

        <TextView
            android:id="@+id/desc_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:elevation="10dp"
            android:fontFamily="@font/tulisans"
            android:text="By creating an own pin code you secure the application access"
            android:textColor="@color/cyan_50"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wrong_password" />

        <View
            android:id="@+id/view_1"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/step_off"
            app:layout_constraintStart_toStartOf="@+id/desc_password"
            app:layout_constraintTop_toBottomOf="@+id/desc_password" />

        <View
            android:id="@+id/view_2"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/step_off"
            app:layout_constraintStart_toEndOf="@+id/view_1"
            app:layout_constraintTop_toBottomOf="@+id/desc_password" />

        <View
            android:id="@+id/view_3"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/step_on"
            app:layout_constraintStart_toEndOf="@+id/view_2"
            app:layout_constraintTop_toBottomOf="@+id/desc_password" />

        <TextView
            android:id="@+id/next_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/onboarding_next"
            android:elevation="10dp"
            android:fontFamily="@font/tulisans"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Create Profile"
            android:textColor="@color/cyan_800"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/left_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>